<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/welcome_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/welcome_view_text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/handwrite"
            android:maxLines="1"
            android:paddingBottom="25dp"
            android:scrollHorizontally="true"
            android:text="Willkommen bei SNU"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40dp" />

        <ImageView

            android:id="@+id/component_contact_card_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/smiley_brown_shadow" />

        <TextView
            android:id="@+id/welcome_view_text_welcome_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/handwrite"
            android:paddingTop="25dp"
            android:scrollHorizontally="true"
            android:text="Du scheinst zum ersten Mal hier zu sein.\n\nWenn Du willst, helfe ich dir kurz beim Einrichten deiner App.\nEs dauert auch nur eine Minute, versprochen!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/welcome_view_text_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/handwrite"
            android:maxLines="1"
            android:paddingTop="50dp"
            android:scrollHorizontally="true"
            android:text="Gerne, Los geht's ..."
            android:textColor="#000000"
            android:textSize="28dp" />
    </LinearLayout>
</ScrollView>