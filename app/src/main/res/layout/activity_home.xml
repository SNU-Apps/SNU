<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_scene_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--android:background="#64000000"-->
    <LinearLayout
        android:id="@+id/main_scene_layout_info_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:background="#00000000"
        android:orientation="horizontal"
        android:paddingEnd="10sp"
        android:paddingStart="10sp"
        android:paddingTop="5dp">

        <FrameLayout
            android:id="@+id/main_scene_layout_info_bar_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_scene_layout_info_bar_account_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left" />

            <android.support.v7.widget.CardView
                android:id="@+id/main_scene_layout_info_bar_account_info_icon"
                android:visibility="gone"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="left"
                android:layout_marginStart="17dp"
                app:cardBackgroundColor="#ff7214"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false">

                <TextView
                    android:id="@+id/main_scene_layout_info_bar_account_info_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        </FrameLayout>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/home_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" />
    </ScrollView>
</LinearLayout>