<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_polaroid_detail_thumbnail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingBottom="5sp"
    android:paddingStart="10sp"
    android:paddingTop="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#06000000">

        <com.androidapp.snu.components.polaroid.PhotoPolaroidThumbnail
            android:id="@+id/component_polaroid_image_detail_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/component_polaroid_description_detail_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/present_idea"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/present_idea_brown_shadow" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>