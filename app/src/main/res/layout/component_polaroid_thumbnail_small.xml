<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_polaroid_thumbnail_small"
    android:layout_width="40dp"
    android:layout_height="48dp"
    android:background="@drawable/polaroid_border"
    android:maxHeight="48dp"
    android:maxWidth="40dp"
    android:paddingBottom="9dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp">

    <!-- size is same as parent - 2 * paddings -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/component_polaroid_image_thumbnail_small"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:background="@color/black"
        android:maxHeight="34dp"
        android:maxWidth="36dp"
        android:scaleType="centerCrop" />
    <!--android:src="@drawable/camera_70px"/-->

</android.support.constraint.ConstraintLayout>