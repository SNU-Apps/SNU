<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_polaroid_detail_thumbnail-header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#06000000"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.androidapp.snu.components.polaroid.PhotoPolaroidThumbnailSmall
        android:id="@+id/component_polaroid_image_detail_thumbnail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/component_polaroid_description_detail_thumbnail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#d6d6d6"
        android:textSize="16sp" />
</LinearLayout>
